{
  "env": {
    "ZHINNX_ROOT": "site"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/packages/(.*)", "destination": "/packages/$1" },
    { "source": "/node_modules/(.*)", "destination": "/node_modules/$1" },
    { "source": "/src/(.*)", "destination": "/site/src/$1" },
    { "source": "/public/(.*)", "destination": "/site/public/$1" },
    { "source": "/(.*\\..*)", "destination": "/site/$1" },
    { "source": "/(.*)", "destination": "/site/index.html" }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "site/**, packages/**, public/**, node_modules/**"
    },
    "api/docs.js": {
        "includeFiles": "site/src/docs/**"
    }
  }
}
