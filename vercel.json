{
  "env": {
    "ZHINNX_ROOT": "site"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/api/index.js" }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "site/**, packages/**, public/**, node_modules/**"
    },
    "api/docs.js": {
        "includeFiles": "site/src/docs/**"
    }
  }
}
